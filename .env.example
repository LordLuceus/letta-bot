# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_default_channel_id
IGNORE_CHANNEL_ID=your_ignored_channel_id

# Letta Configuration
LETTA_TOKEN=your_letta_api_token
LETTA_AGENT_ID=your_letta_agent_id
LETTA_BASE_URL=https://api.letta.com

# Optional: ElevenLabs for audio transcription
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Optional: Timer Configuration
ENABLE_TIMER=true
TIMER_INTERVAL_MINUTES=30
FIRING_PROBABILITY=0.1

# Message Processing Timing Configuration (all values in milliseconds)
# Time to wait before sending the first request to Letta (allows for message batching)
INITIAL_REQUEST_DELAY_MS=30000

# Time to wait when batching multiple rapid messages
BATCH_DELAY_MS=1000

# Time to wait after user stops typing before processing messages
TYPING_PAUSE_DELAY_MS=2000